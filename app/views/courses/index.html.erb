
<h1>All Courses</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Total Hours in Class</th>
      </tr>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
      <tr>
        <th scope="row"><%= teacher.id %></th>
        <td><%= course.name %></d>
        <td><%= course.total_in_class_hours %></td>
      </tr>
    </tbody>
  </table>
<% end %>