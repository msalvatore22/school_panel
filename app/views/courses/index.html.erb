
<h1>All Courses</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Total Hours in Class</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
      <tr>
        <th scope="row"><%= course.id %></th>
        <td><%= course.name %></d>
        <td><%= course.total_in_class_hours %></td>
        <td><%= link_to "Show Course", course %></td>
        <td><%= link_to "Edit Course", edit_course_path(course) %></td>
        <td><%= link_to "Delete Course", course, method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
