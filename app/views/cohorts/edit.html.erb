<%= bootstrap_form_with(model: @cohort, local: true) do |f| %>
<%= f.text_field :name, label: "Name:" %>
<%= f.date_field :start_date %>
<%= f.date_field :end_date %>
<%= f.collection_select(:course_id, Course.all, :id, :name) %>
<%= f.submit "Update Cohort" %>
<% end %>

<%= bootstrap_form_for(@teacher_cohort) do |f| %>
  <%= f.collection_select(:teacher_id, Teacher.all, :id, :first_name) %>
  <%= f.hidden_field(:cohort_id, value: "#{@cohort.id}") %>
  <%= f.submit "Add cohort" %>
<% end %>